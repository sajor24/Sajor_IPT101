<Window x:Class="SajorWpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SajorWpfApp1"
        mc:Ignorable="d"
        Title="Employee" Height="450" Width="800">
    <Grid Background="#FFD75F5F">
        <Label Content="First Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Width="150" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,10,0,0"/>

        <Label Content="Last Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,45,0,0"/>
        <TextBox x:Name="txtLastName" Width="150" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,45,0,0"/>

        <Label Content="Age:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0"/>
        <TextBox Width="50" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,80,0,0"/>

        <Label Content="Position:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,115,0,0"/>
        <TextBox  Width="150" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,115,0,0"/>

        <Button Content="Add" Width="80" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="125,148,0,0"/>

        <TextBlock HorizontalAlignment="Right" Margin="420,35,0,0" TextWrapping="Wrap" Text="Employee System" VerticalAlignment="Top" Height="115" Width="338" FontSize="40"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=20}" Margin="27,217,42,29"/>
    </Grid>
</Window>
